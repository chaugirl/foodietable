<%= form_for @restaurant do |f| %>
	<% if @restaurant.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @restaurant.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="field">
		<%= f.label :name %><br/>
    	<%= f.text_field :name %>
  	</div>
  	<div class="field">
  	  <%= f.label :password %><br/>
  	  <%= f.password_field :password %>
  	</div>
  	<div class="field">
  	  <%= f.label :password_confirmation %><br/>
  	  <%= f.password_field :password_confirmation %>
  	</div>
  	<div class="field">
		<%= f.label :address %><br/>
    	<%= f.text_field :address %>
  	</div>
  	<div class="field">
		<%= f.label :capacity %><br/>
    	<%= f.text_field :address %>
  	</div>
  	<div class="field">
		<%= f.label :bio %><br/>
    	<%= f.text_field :bio %>
  	</div>
  	<div class="field">
		<%= f.label :phone_number %><br/>
    	<%= f.telephone_field :phone_number %>
  	</div>
  	<div class="actions"><%= f.submit %></div>
<% end %>
