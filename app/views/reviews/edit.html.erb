<h1>Edit your review</h1>	
<p>Enter the information to edit the Product<p>


<%= form_for([@restaurant, @review]) do |f| %> 

	<div class="field">
		<%= f.label :comments %><br/>
		<%= f.text_area :comments %>	
	</div>

	<div class="field">
		<%= f.label :title %><br/>
		<%= f.text_area :title %>	
	</div>

<div class="field">
		<%= f.label :rating %><br/>
		<%= f.text_area :rating %>	
	</div>


	<div class="actions">
		<%= f.submit %>
	</div>


	<% end %>