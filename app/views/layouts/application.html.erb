<!DOCTYPE html>
<html>
<head>
  <title>Foodietable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

    <ul class="userinfo">
      <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Create an Account", new_foody_path %>
      <% end %>
    </ul>

    <ul>
      <li>
         <%= link_to "Let's Eat!", restaurants_path %>
      </li>
      <li>
        <% if current_user %>
          <%= link_to "Your Foodie Profile!", foody_path(current_user) %> 
        <% end %>
        <!-- hidden if user is logged out -->
      </li>
    </ul>
  </body>
</html>