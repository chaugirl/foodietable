


<%= yield %>
    <ul class="userinfo">
      <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Create an Account", new_foody_path %>
      <% end %>
    </ul>

    <ul>
      <li>
         <%= link_to "Let's Eat!", restaurants_path %>
      </li>
      <% if current_user %>
      <li>
          <%= link_to "Your Foodie Profile!", foody_path(current_user) %>
      </li>
      <li>
          <%= link_to "Edit Your Profile", edit_foody_path(current_user) %>
      </li>
      <% end %>
    </ul>
  </body>
</html>